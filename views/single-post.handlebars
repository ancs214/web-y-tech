
<article class="post">
      <div class="title">
        <h2>{{post.title}}</h2>
         <div> Posted by {{post.user.username}} on {{format_date post.created_at}}</div>
      </div>
        <div>{{post.post_content}}</div>
   
      
    </article>


{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body" id="text"></textarea>
  </div>

  <div>
    <button type="submit">Submit</button>
  </div>
</form>
{{/if}}

<div class="comments">
{{#each post.comments}}
  <section class="comment">
    <div>
      {{comment_text}}
    </div>
    <span>
      Comment by {{user.username}} on {{format_date created_at}}
    </span>
   
  </section>
{{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}